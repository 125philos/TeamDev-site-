<!-- ***************** --><!-- КАРТОЧКИ РАСТЕНИЙ --><!-- ***************** -->{% extends "base.twig" %}{% block rows %}    <div class="row">        <div class="col-sm-5 text-left">            <h1>РАСТЕНИЯ ФЕРМЫ</h1>        </div>        <div class="col-sm-5 text-left">            <a href="/rasteniespisokk/">                <button type="button" class="btn btn-primary" style="margin-top: 21px">Добавить растение</button>            </a>        </div>        <!-- Карточки растений -->        <div class="col-sm-12 text-left">            <!-- Ряды карточек -->            <div class="row recipes-container">                {% for key, crastenie in rastenie %}                    <div class="col-xs-4">                        <div class="thumbnail">                            <!-- Фото растения -->                            <a href="/rasteniespisok/{{ crastenie.id_Rastenie }}">                                <img src="/image/plants/{{ crastenie.PhotoRastenie }}" alt="picture.jpg">                            </a>                            <div class="caption">                                <!-- Сорт растения(+ переход по ссылке на страницу растения) -->                                {% for key in sortrastenie %}                                    {% if key.id_SortRastenie == crastenie.id_SortRastenie %}                                        {% for val in typerastenie %}                                            {% if val.id_TypeRastenie == key.id_TypeRastenie %}                                                <h3>                                                    <a href="/rasteniespisok/{{ crastenie.id_Rastenie }}">{{ val.TypeRastenieName }}</a>                                                </h3>                                            {% endif %}                                        {% endfor %}                                    {% endif %}                                {% endfor %}                                <p>Дата высадки: {{ crastenie.DateVisadkaRastenie|date('d.m.Y', false) }}</p>                                <p>Окраска плодов: {{ crastenie.ColorRastenie }}</p>                                <p>Цена растения: {{ crastenie.CenaRastenie }} </p>                            </div>                        </div>                    </div>                {% endfor %}            </div>        </div>    </div>{% endblock %}