<!-- ***************** --><!-- КАРТОЧКИ РАСТЕНИЙ --><!-- ***************** -->{% extends "base.twig" %}{% block rows %}    <div class="row">        <div class="col-sm-5">            <h1>РАСТЕНИЯ ФЕРМЫ</h1>        </div>        <div class="col-sm-7">            <a href="/rasteniespisokk/">                <button type="button" class="btn btn-primary" style="margin-top: 21px">Добавить растение</button>            </a>        </div>        <!-- Карточки растений -->        <div class="col-sm-9 text-left">            <!-- Ряды карточек -->            <div class="row recipes-container">                {% for key, crastenie in rastenie %}                    <div class="col-xs-3">                        <div class="thumbnail">                            <!-- Фото растения -->                            <img src="/image/plants/{{ crastenie.PhotoRastenie }}" alt="picture.jpg">                            <div class="caption">                                <!-- Сорт растения(+ переход по ссылке на страницу растения) -->                                {% for val in sortrastenie %}                                    {% if val.id_SortRastenie == crastenie.id_SortRastenie %}                                        <h4><a href="/rasteniespisok/{{ crastenie.id_Rastenie }}">Сорт                                                растения: {{ val.SortRastenieName }}</a></h4>                                    {% endif %}                                {% endfor %}                                <p>Дата высадки: {{ crastenie.DateVisadkaRastenie|date('d.m.Y', false) }}</p>                                <p>Окраска плодов: {{ crastenie.ColorRastenie }}</p>                                <p>Цена растения: {{ crastenie.CenaRastenie }} </p>                            </div>                        </div>                    </div>                {% endfor %}            </div>        </div>    </div>{% endblock %}