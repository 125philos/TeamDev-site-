<!-- ***************** --><!-- КАРТОЧКИ РАСТЕНИЙ --><!-- ***************** -->{% extends "base.twig" %}{% block rows %}    <div class="row">        <!-- Навигация по видам растений -->        <div class="col-sm-3 sidenav">            <a href="/rasteniespisokk/">                <button type="button" class="btn btn-primary">Добавить растение</button>            </a>            </br></br>            <p class="lead">Виды растений</p>            <div class="list-group">                {% for ctyperastenie in typerastenie %}                    <a href="#" class="list-group-item"                       id="ctyperastenie-{{ ctyperastenie.id_TypeRastenie }}">{{ ctyperastenie.TypeRastenieName }}</a>                {% endfor %}            </div>        </div>        <!-- Карточки растений -->        <div class="col-sm-9 text-left">            <h5>РАСТЕНИЯ ФЕРМЫ</h5>            <!-- Ряды карточек -->            <div class="row recipes-container">                {% for key, crastenie in rastenie %}                    <div class="col-xs-3">                        <div class="thumbnail">                            <!-- Фото растения -->                            <img src="/image/{{ crastenie.PhotoRastenie }}" alt="picture.jpg">                            <div class="caption">                                <!-- Сорт растения(+ переход по ссылке на страницу растения) -->                                {% for val in sortrastenie %}                                    {% if val.id_SortRastenie == crastenie.id_SortRastenie %}                                        <h4><a href="/rasteniespisok/{{ crastenie.id_Rastenie }}">Сорт                                                растения: {{ val.SortRastenieName }}</a></h4>                                    {% endif %}                                {% endfor %}                                <p>Дата высадки: {{ crastenie.DateVisadkaRastenie }}</p>                                <p>Окраска плодов: {{ crastenie.ColorRastenie }}</p>                                <p>Цена растения: {{ crastenie.CenaRastenie }} </p>                            </div>                        </div>                    </div>                {% endfor %}            </div>        </div>    </div>{% endblock %}