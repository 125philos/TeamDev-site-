<!-- ***************** --><!-- КАРТОЧКИ ЖИВОТНЫХ --><!-- ***************** -->{% extends "base.twig" %}{% block rows %}    <div class="row">        <div class="col-sm-5 text-left">            <h1>ЖИВОТНЫЕ ФЕРМЫ</h1>        </div>        <div class="col-sm-5 text-left">            <a href="/zverspisokcr">                <button type="button" class="btn btn-primary" style="margin-top: 21px">Добавить животное</button>            </a>        </div>        <!-- Карточки животных -->        <div class="col-sm-12 text-left">            <!-- Ряды карточек -->            <div class="row recipes-container">                {% for key, czver in zver %}                    <div class="col-xs-4">                        <div class="thumbnail">                            <!-- Фото животного -->                            <img src="/image/animals/{{ czver.PhotoZver }}" alt="picture.jpg">                            <div class="caption">                                <!-- Кличка животного (+переход по ссылке на страницу животного) -->                                <h4><a href="/zverspisok/{{ czver.id_Zver }}">{{ czver.NameZver }}</a></h4>                                {% for val in porodazver %}                                    {% if val.id_PorodaZver == czver.id_PorodaZver %}                                        <p>Порода: {{ val.PorodaZverName }}</p>                                    {% endif %}                                {% endfor %}                                <p>Пол: {{ czver.SexZver }}</p>                                <p>Дата рождения: {{ czver.DateBirthday|date('d.m.Y', false) }}</p>                            </div>                        </div>                    </div>                {% endfor %}            </div>        </div>    </div>{% endblock %}