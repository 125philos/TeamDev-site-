<!-- ***************** --><!-- КАРТОЧКИ ЖИВОТНЫХ --><!-- ***************** -->{% extends "base.twig" %}{% block rows %}		<div class="row">			<!-- Навигация по видам животных -->		<div class="col-sm-3 sidenav">					<button type="button" class="btn btn-primary">Добавить животное</button>			</br></br>					<p class="lead">Виды животных</p>			<div class="list-group">				{% for cgenre in genre %}					<a href="#" class="list-group-item" id="cgenre-{{ cgenre.id_genre }}">{{ cgenre.genre_name }}</a>				{% endfor %}			</div>		</div>				<!-- Карточки животных -->		<div class="col-sm-9 text-left">					<h5>ЖИВОТНЫЕ ФЕРМЫ</h5>					<!-- Ряды карточек -->			<div class="row recipes-container">				{% for key, cperformer in performer %}					<div class="col-xs-3">						<div class="thumbnail">							<!-- Фото животного -->							<img src="{{ cperformer.performer_photo }}" alt="">							<div class="caption">								<!-- Кличка животного (+переход по ссылке на страницу животного) -->								<h4><a href="/zver/{{ cperformer.id_performer }}">Кличка животного</a></h4>									<!-- Порода -->									<p>Порода</p>									<!-- Пол -->									<p>Пол</p>									<!-- Дата рождения -->									<p>Дата рождения</p>							</div>						</div>					</div>				{% endfor %}			</div>		</div>			</div>{% endblock %}