<!-- ***************** --><!-- КАРТОЧКИ ЖИВОТНЫХ --><!-- ***************** -->{% extends "base.twig" %}{% block rows %}		<div class="row">			<!-- Навигация по видам животных -->		<div class="col-sm-3 sidenav">					<a href="/zverspisokcr">			<button type="button" class="btn btn-primary">Добавить животное</button>			</a>					<p class="lead">Виды животных</p>			<div class="list-group">				{% for val in typezver %}					<a href="#" class="list-group-item" 					id="val-{{ val.id_TypeZver }}">{{ val.TypeZverName }}</a>				{% endfor %}			</div>		</div>				<!-- Карточки животных -->		<div class="col-sm-9 text-left">					<h5>ЖИВОТНЫЕ ФЕРМЫ</h5>					<!-- Ряды карточек -->			<div class="row recipes-container">				{% for key, czver in zver %}					<div class="col-xs-3">						<div class="thumbnail">							<!-- Фото животного -->							<img src="/image/animals/{{ czver.PhotoZver }}" alt="picture.jpg">							<div class="caption">								<!-- Кличка животного (+переход по ссылке на страницу животного) -->								<h4><a href="/zverspisok/{{ czver.id_Zver }}">Кличка животного: 																			{{czver.NameZver}}</a></h4>	                                {% for val in porodazver %}	                                    {% if val.id_PorodaZver == czver.id_PorodaZver %}	                                        <p>Порода: {{ val.PorodaZverName }}</p>	                                    {% endif %}	                                {% endfor %}									<p>Пол: {{ czver.SexZver }}</p>									<p>Дата рождения: {{ czver.DateBirthday|date('d.m.Y', false) }}</p>							</div>						</div>					</div>				{% endfor %}			</div>		</div>			</div>{% endblock %}